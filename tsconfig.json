{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@app/components": ["src/components/index.ts"],
      "@app/helper": ["src/helper/index.ts"],
      "@app/interfaces": ["src/interfaces/index.ts"]
    }
  },
  "include": ["./src/**/**/*"]
}
